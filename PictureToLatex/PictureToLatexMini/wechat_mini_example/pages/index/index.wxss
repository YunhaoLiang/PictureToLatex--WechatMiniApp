/**index.wxss**/
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0;
  color: #333;
}

.error-box {
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.error-text {
  color: #ff4d4f;
  font-size: 28rpx;
  word-break: break-all;
}

.upload-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.upload-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.upload-btn[disabled] {
  background: #9be0b4;
}

.preview {
  width: 100%;
  height: 400rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  overflow: hidden;
}

.preview image {
  width: 100%;
  height: 100%;
}

.result-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.copy-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-text {
  font-size: 32rpx;
  color: #333;
} 